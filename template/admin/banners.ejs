<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>管理后台</title>
</head>
<body>
<div class="page">
    <% include components/nav.ejs %>
    <div class="right">
        <div>
            <form action="?" method="post">
                标题：<input type="text" name="title"/><br/>
                描述：<textarea name="description"></textarea><br/>
                链接：<input type="text" name="href"/><br/>
                <button type="submit" value="添加">添加</button>
            </form>

        </div>
        <table border="1" width="100%">
            <thead>
            <tr>
                <th>ID</th>
                <th>标题</th>
                <th>描述</th>
                <th>连接</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i < banners.length;i++){ %>
            <tr>
                <td><%= banners[i].id %></td>
                <td width="30%"><%= banners[i].title %></td>
                <td><%= banners[i].description %></td>
                <td><%= banners[i].href %></td>
                <td width="20%">
                    <a href="?act=mod&id=<%= banners[i].id %>">修改</a>
                    <a href="?act=del&id=<%= banners[i].id %>" onclick="return confirm('你确定要删除这条数据吗?')">删除</a>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
        <% if (typeof mod_data !='undefined'){ %>
        <div>
            <form action="?" method="post">
                <input type="hidden" name="mod_id" value="<%= mod_data.id %>"/>
                标题：<input type="text" name="title" value="<%= mod_data.title %>"/><br/>
                描述：<textarea name="description"><%= mod_data.description %></textarea><br/>
                链接：<input type="text" name="href" value="<%= mod_data.href %>"/><br/>
                <button type="submit" value="修改">修改</button>
                <a href="/admin/banners">取消修改</a>
            </form>

        </div>
        <% } %>

    </div>
</div>

</body>
</html>